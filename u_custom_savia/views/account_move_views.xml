<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_purchase_inherit" model="ir.ui.view">
        <field name="name">account.move.inherit.purchase.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="purchase.view_move_form_inherit_purchase"/>
        <field name="arch" type="xml">
            <field name="purchase_vendor_bill_id" position="after">
                <field name="revised" 
                       widget="radio"
                       options="{'horizontal': true}"
                       groups="u_custom_savia.jefe_obra_security_rules_group"/>
            </field>            
        </field>
    </record>

    <record id="view_move_form_inherit_savia" model="ir.ui.view">
        <field name="name">account.move.inherit.savia.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="client_type" attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"/>
                <field name="business_line" attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"/>
            </field>           
        </field>
    </record>

</odoo>
