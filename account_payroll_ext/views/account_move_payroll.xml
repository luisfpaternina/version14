<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>

        <!-- VISTA TREE -->
        <record id="view_account_move_payroll_ext_tree" model="ir.ui.view">
            <field name="name">account.move.payroll.tree</field>
            <field name="model">account.move.payroll</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="project_id"/>
                </tree>
            </field>
        </record>

        <!-- VISTA FORM -->
        <record id="view_account_move_payroll_ext_form" model="ir.ui.view">
            <field name="name">raccount.move.payroll.form</field>
            <field name="model">account.move.payroll</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button 
                        name="generate_records_account_move"
                        string="GENERATE ACCOUNT MOVE"
                        type="object"
                        class="oe_highlight"
                        confirm="Are you sure you want to do this?"
                        attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td>
                                            <field name="name" placeholder="Name"/>
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id" options="{'no_create': True, 'no_create_edit':True}" required="1"/>
                                <field name="employee_name" invisible="1"/>
                            </group>
                            <group>
                                <field name="code" invisible="1"/>
                                <field name="project_id" options="{'no_create': True, 'no_create_edit':True}"/>
                            </group>
                            <group>
                                 <field name="mjs" invisible="1"/>
                                 <field name="is_done" invisible="1"/>
                                 <field name="month"/>
                            </group>
                            <group>
                                
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- VISTA SEARCH -->
        <record id="view_account_move_payroll_ext_search" model="ir.ui.view">                      
          <field name="name">account.move.payroll.search</field>                                
          <field name="model">account.move.payroll</field>                                
          <field name="arch" type="xml">                                    
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="employee_id"/>
                <field name="project_id"/>                                                
                <group expand="0" string="Group By">                                            
                    <filter string="Employee" name="employee_id" context="{'group_by': 'employee_id'}"></filter>
                    <filter string="Project BIM" name="project_id" context="{'group_by': 'project_id'}"></filter>                                             
                </group>                                    
            </search>                                
          </field>                            
        </record>
        
        <!-- ACCIÃ“N DE VENTANA -->
        <record model="ir.actions.act_window" id="action_view_account_move_payroll">
            <field name="name">Account move payroll</field>
            <field name="res_model">account.move.payroll</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create new record
                </p>
            </field>
        </record>

        <!-- ELEMENTO DEL MENU -->
        <menuitem 
            id="menu_account_move_payroll" 
            name="Account move payroll" 
            parent="account.menu_finance_configuration"
            action="action_view_account_move_payroll"
            />

    </data>
</odoo>
