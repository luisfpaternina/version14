<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">


        <!-- Reglas de Acceso -->
        <record id="rule_see_own_importations" model="ir.rule">
            <field name="name">See own Importations</field>
            <field ref="model_work_database_concept_importer" name="model_id"/>
            <field name="domain_force">['|',('user_id', '=', user.id),('user_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('base_bim_2.group_user_bim'))]"/>
        </record>

        <record id="rule_see_all_importations" model="ir.rule">
            <field name="name">See all Importations</field>
            <field ref="model_work_database_concept_importer" name="model_id"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base_bim_2.group_user_bim_all'))]"/>
        </record>

    </data>
</odoo>
