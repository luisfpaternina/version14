<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="concept_from_database_wizard" model="ir.ui.view">
        <field name="name">concept.from.database.wizard</field>
        <field name="model">concept.from.database.wizard</field>
        <field name="arch" type="xml">
            <form string="Real Cost Report">
                <group>
                    <group>
                        <field name="budget_id" invisible="1"/>
                        <field name="price_type" required="1" widget="radio"/>
                    </group>
                    <group>
                        <field name="replace_concepts"/>
                        <field name="use_cost_list" invisible="1"/>
                        <field name="budget_cost_list_id" options="{'no_create': True}" attrs="{'invisible':[('use_cost_list','=',False)]}"/>
                    </group>
                </group>
                <footer>
                    <button string="Process Concepts" name="action_process_database" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_concept_from_database_wizard" model="ir.actions.act_window">
        <field name="name">Concepts From Database</field>
        <field name="res_model">concept.from.database.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
