<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="work_database_concept_importer_view_tree" model="ir.ui.view">
            <field name="name">work_database.concept.importer.view.tree</field>
            <field name="model">work.database.concept.importer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="budget_id"/>
                    <field name="user_id"/>
                    <field name="create_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="work_database_concept_importer_view_form" model="ir.ui.view">
            <field name="name">work.database.concept.importer.view.form</field>
            <field name="model">work.database.concept.importer</field>
            <field name="arch" type="xml">
                <form string="Work">
                    <header>
                        <button type="object" string="Import" name="action_import_concepts" states="to_execute"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                 <field name="name" readonly="1" force_save="1" attrs="{'readonly': [('state','!=','to_execute')]}"/>
                                 <field name="project_id" required="1" options='{"no_create": 1, "no_open": 1}' attrs="{'readonly': [('state','!=','to_execute')]}"/>
                                 <field name="version" attrs="{'readonly': [('state','!=','to_execute')]}"/>
                                 <field name="excel_file" string="Excel File" filename="filename" attrs="{'readonly': [('state','!=','to_execute')]}"/>
                                 <field name="filename" invisible="1" attrs="{'readonly': [('state','!=','to_execute')]}"/>
                                 <field name="create_all_products" attrs="{'readonly': [('state','!=','to_execute')],'invisible':[('version','!=','2000')]}"/>
                            </group>
                            <group>
                                 <field name="create_date" readonly="1"/>
                                 <field name="user_id" readonly="1"/>
                                 <field name="budget_id" readonly="1" force_save="1"/>
                                 <field name="budget_name" attrs="{'readonly': [('state','!=','to_execute')]}"/>
                                 <field name="product_cost_or_price"  attrs="{'invisible': [('create_all_products', '=', False)], 'required': [('create_all_products', '=', True)], 'readonly': [('state','!=','to_execute')]}"/>
                                 <field name="product_id" attrs="{'readonly': [('state','!=','to_execute')],'invisible':['|',('version','!=','2000'),('create_all_products', '=', True)]}" options="{'no_open': True, 'no_create': True}"/>
                            </group>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                            <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="work_database_concept_importer_action" model="ir.actions.act_window">
            <field name="name">Work Database Concept Importer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">work.database.concept.importer</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="work_database_concept_importer_act" name="Work Database Concept Importer"
                  parent="base_bim_2.menu_bim_imports"
                  action="work_database_concept_importer_action"
                  sequence="99"/>
    </data>
</odoo>