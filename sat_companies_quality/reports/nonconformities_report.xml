<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        
        <template id="report_template_notconformities">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">                    
                    <div class="header">
                        <table width="100%">
                            <tr>
                                <td>
                                    <img t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" width="115" height="90"/>
                                </td>
                                <td>
                                    <strong>INFORME DE NO CONFORMIDADES<br></br>
                                    ACCIÓN CORRECTIVA</strong>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="article o_report_layout_standard">
                       <div class="page">
                            <style>
                               
                            </style>
                            <table width="100%">
                                <tr>
                                    <td>FECHA:</td>
                                    <td>N°</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="footer">
                        <div class="text-right" style="border-top: 1px solid black;">
                            <ul class="list-inline">
                                <li>Page:</li>
                                <li><span class="page"/></li>
                                <li>/</li>
                                <li><span class="topage"/></li>
                            </ul>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <report
                id="id_template_notconformities"
                string="Informe de no conformidad"
                model="quality.alert"
                report_type="qweb-pdf"
                name="sat_companies_quality.report_template_notconformities"
        />

    </data>
</odoo>