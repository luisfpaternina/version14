<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <record id="view_form_cost_list_form" model="ir.ui.view">
        <field name="name">view.form.cost.list.form</field>
        <field name="model">bim.cost.list</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="o_address_format">
                       <h1>
                           <field name="name" required="1" class="oe_inline" colspan="1"/>
                       </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"  options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="state_id"  options="{'no_create': True}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Cost List">
                            <field name="line_ids">
                                <tree editable="bottom" create="1" delete="1">
                                    <field name="sequence" widget="handle"/>

                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_form_cost_list_tree" model="ir.ui.view">
        <field name="name">view.form.cost.list.tree</field>
        <field name="model">bim.cost.list</field>
        <field name="arch" type="xml">
            <tree delete="1">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="state_id"/>
            </tree>
        </field>
    </record>

    <record id="action_bim_cost_list" model="ir.actions.act_window">
        <field name="name">Bim Cost List</field>
        <field name="res_model">bim.cost.list</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a new Entry!
            </p>
        </field>
    </record>

    <menuitem id="menu_bim_cost_list"
        name="BIM Cost List"
        parent="base_bim_2.menu_bim_stock"
        action="action_bim_cost_list"
        sequence="19" />

    </data>

</odoo>
