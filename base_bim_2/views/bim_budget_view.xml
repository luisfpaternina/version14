<?xml version="1.0" encoding="UTF-8"?>
 <odoo>

    <record id="view_form_bim_budget" model="ir.ui.view">
        <field name="name">view.form.bim.budget</field>
        <field name="model">bim.budget</field>
        <field name="arch" type="xml">
            <form string="Budget List">
                <header>
                    <button name="%(base_bim_2.bim_budget_report_wizard_action)d" attrs="{'invisible': [('concept_ids','=',[])]}"
                            string="Budget" type="action" class="oe_highlight" groups="base_bim_2.group_user_bim"/><!---->

                    <button name="%(base_bim_2.bim_certification_report_wizard_action)d" attrs="{'invisible': [('type','!=','certification')]}"
                            string="Certification" type="action" class="btn-primary" groups="base_bim_2.group_user_bim"/><!--groups="base_bim_2.group_user_bim"-->

                    <button name="%(base_bim_2.bim_resource_report_wizard_action)d"
                            attrs="{'invisible': [('concept_ids','=',[])]}"
                            type="action" string="Resources" icon="fa-list-ul"/>

                    <button name="%(base_bim_2.action_price_massive_wzd)d" attrs="{'invisible': [('concept_ids','=',[])]}"
                            type="action" string="Update Prices" class="oe_highlight"/>

                    <button name="%(base_bim_2.bim_budget_stage_wizard_action)d" class="oe_highlight"
                            string="Generate Stages"  type="action"
                            attrs="{'invisible': [('stage_ids', '!=', [])]}"/>
                    <button name="%(base_bim_2.action_bim_ajust_budget)d" string="Modify" class="oe_highlight" type="action"/>

                    <button name="print_budget_notes" string="Notes" type="object"/>
                    <button name="action_budget_send" type="object" string="Send Mail" groups="base_bim_2.group_user_bim"/><!--groups="base_bim_2.group_user_bim"-->

                    <!--............................................................................................-->

                    <button name="import_gantt" type="object" string="Gantt Import" class="btn-secondary"/>
                    <button name="export_gantt" type="object" string="Gantt Export" class="btn-secondary"/>

                    <!--............................................................................................-->

                    <button name="import_bim_file" type="object" string="BIM Import" class="btn-secondary"/>

                    <!--............................................................................................-->

                    <field name="state_id" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="update_amount"
                            class="oe_stat_button"
                            icon="fa-gear" type="object"
                            string="Update Balance">
                        </button>
                        <button name="action_view_concepts" type="object" class="oe_stat_button" icon="fa-sitemap" groups="base_bim_2.group_user_bim"><!--groups="base_bim_2.group_user_bim" -->
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value"><field name="concept_count" widget="statinfo" nolabel="1"/></span>
                                <span class="o_stat_text">Concept</span>
                            </div>
                        </button>
                        <button name="action_view_stages" type="object" class="oe_stat_button" icon="fa-list" groups="base_bim_2.group_user_bim"><!--groups="base_bim_2.group_user_bim"-->
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value"><field name="stage_count" widget="statinfo" nolabel="1"/></span>
                                <span class="o_stat_text">Stages</span>
                            </div>
                        </button>
                        <button name="action_view_spaces" type="object" class="oe_stat_button" icon="fa-tasks" groups="base_bim_2.group_user_bim"><!--groups="base_bim_2.group_user_bim"-->
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value"><field name="space_count" widget="statinfo" nolabel="1"/></span>
                                <span class="o_stat_text">Spaces</span>
                            </div>
                        </button>
                        <field name="bim_certificate_chapters" invisible="1"/>
                        <button name="action_view_chapter_certifications" type="object" class="oe_stat_button" icon="fa-th-large" groups="base_bim_2.group_user_bim"
                                attrs="{'invisible': [('bim_certificate_chapters','=',False)]}"><!--groups="base_bim_2.group_user_bim"-->
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value"><field name="chapter_certification_count" widget="statinfo" nolabel="1"/></span>
                                <span class="o_stat_text">Certifications</span>
                            </div>
                        </button>

                        <button name="action_view_certifications" type="object" class="oe_stat_button" icon="fa-th-list" groups="base_bim_2.group_user_bim" ><!--groups="base_bim_2.group_user_bim"-->
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value"><field name="certification_count" widget="statinfo" nolabel="1"/></span>
                                <span class="o_stat_text">Certifications</span>
                            </div>
                        </button>
                    </div>
                    <div>
                        <h1>
                        <field name="code" placeholder="Code"  readonly="1" class="oe_inline" required="True"/> -
                        <field name="name" placeholder="Description" class="oe_inline"/>
                        </h1>
                    </div>

                    <group>
                      <group>
                            <field name="project_id"/>
                            <field name="user_id"/>
                            <field name="currency_id" required="1"/>
                            <field name="concept_ids" invisible="1"/>
                            <field name="type" required="1"/>
                            <field name="gantt_type"/>
                            <field name="company_id" invisible="1"/>
                            <field name="list_price_do" invisible="1"/>
                            <field name="use_cost_list" invisible="1"/>
                            <field name="pricelist_id"
                                   attrs="{'required': [('list_price_do','=',True)],'invisible': [('list_price_do','=',False)]}"
                                   options="{'no_open':True,'no_create': True}"/>
                            <field name="cost_list_id"
                                   attrs="{'invisible': [('use_cost_list','=',False)]}"
                                   options="{'no_open':True,'no_create': True}"/>
                            <field name="do_compute" widget="boolean_toggle"/>
                            <field name="planning_method"/>


                      </group>
                       <group>
<!--                        <field name="balance" widget="monetary"/>-->
                           <field name="balance_certified_residual"/>
                           <field name="certification_factor"/>
                           <field name="balace_surface"/>
                            <field name="surface"/>
                            <newline/>
                            <label for="date_start" string=""/>
                            <div class="row">
                                <div class="col text-center">
                                    <label for="date_start" class="font-weight-bold" string="Estimated"/>
                                </div>
                                <div class="col text-center">
                                    <label for="date_from" class="font-weight-bold" string="Scheduled"/>
                                </div>
                            </div>
                            <label for="date_start"/>
                            <div class="row position-relative">
                                <div class="col text-center">
                                    <field name="date_start" required="1"/>
                                </div>
                                <div class="col text-center">
                                    <field name="date_from"/>
                                </div>
                                <!-- <field name="use_programmed" widget="boolean_toggle" class="position-absolute mx-auto" style="left: 0; right: 0; top: 0.5rem; width: 20px;"/> -->
                                <button name="set_estimated_dates" type="object" class="btn-link position-absolute text-primary oe_read_only" icon="fa-arrow-left" style="left: 50%; right: 0; top: 0.5rem; transform: translate(-50%, 0%);"/>
                            </div>
                            <label for="date_end"/>
                            <div class="row">
                                <div class="col text-center">
                                    <field name="date_end" required="1"/>
                                </div>
                                <div class="col text-center">
                                    <field name="date_to"/>
                                </div>
                            </div>
                            <field name="stage_ids" invisible="1"/>
                            <field name="template_id" options='{"no_create": 1}'/>
                            <field name="pvp_id" domain="[('budget_id','=',id)]"/>
                            <field name="total_main_asset" invisible="1"/>
                            <field name="order_mode" widget="radio" invisible="1"/>
                      </group>
                    </group>
                    <notebook>
                        <page string="Assets/Discounts">
                            <group>
                               <field name="asset_ids" nolabel="1" >
                                    <tree editable="bottom" context="{'default_presupuesto_id': budget_id}"
                                          decoration-danger="total&lt;=0" excel_export="1">
                                        <field name="budget_id" invisible="1"/>
                                        <field name="sequence" string="#" invisible="1"/>
                                        <field name="asset_id" options='{"no_create": 1, "no_open": 1}' required="1"/>
                                        <field name="value" required="1"/>
                                        <field name="affect_ids" domain="[('budget_id', '=', budget_id), ('id', '!=', id)]" options="{'no_create_edit':True}" widget="many2many_tags"/>
                                        <field name="main_asset" invisible="1"/>
                                        <field name="to_invoice" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="total" widget="monetary" force_save="1"/>
                                    </tree>
                                </field>
                            </group>
                           <!-- <group>
                                <div class="container">
                                    <div class="row text-right"><div class="col-12"> <button name="update_assets_total" type="object" string="Update" class="btn btn-secondary"/></div></div>
                                </div>
                            </group>-->
                        </page>
                        <page string="Indicators" groups="base_bim_2.group_manager_bim">
                            <button name="compute_indicators" string="Calculate indicators" class="oe_highlight" type="object"/>
                            <field name="indicator_ids" nolabel="1">
                                <tree editable="bottom" create="false" delete="false" decoration-danger="amount_projected&lt;0.0" excel_export="1">
                                    <field name="type"/>
                                    <field name="amount_budget" sum="B"/>
                                    <field name="amount_executed" sum="E"/>
                                    <field name="amount_projected" sum="P"/>
                                    <field name="amount_certified" sum="C"/>
                                    <field name="amount_proj_cert" sum="J"/>
                                    <field name="percent" widget="percentage"/>
                                    <field name="budget_id" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page name="budget_control" string="Control" groups="base_bim_2.group_manager_bim">
                            <button name="compute_budget_updates" string="Update Budget" class="oe_highlight" type="object"/>
                            <field name="stage_ids">
                                <tree name="b_control" excel_export="1" editable="bottom" create="0" delete="0" decoration-success="state =='process'" decoration-bf="state =='approved'" decoration-danger="state =='cancel'" decoration-muted="state =='draft'">
                                    <field name="name" readonly="1"/>
                                    <field name="date_start" readonly="1"/>
                                    <field name="state" readonly="1"/>
                                    <field name="certification" widget="monetary" sum="EV"/>
                                    <field name="executed" widget="monetary" sum="AC"/>
                                    <field name="planning" widget="monetary" sum="PV"/>
                                    <field name="cost_variation" widget="monetary" sum="CV"/>
                                    <field name="advance_variation" widget="monetary" sum="SV"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page name="analysis_graph" string="Analysis" groups="base_bim_2.group_manager_bim">
                            <div class="text-center">
                                <field name="analysis_graph" widget="image"/>
                            </div>
                        </page>
                        <page string="Earned Value">
                            <group string="Analysis of performance indicators">
                                <group>
                                    <field name="stage_analysis" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="stage_cost_var" force_save="1"/>
                                    <field name="cost_var_analysis" force_save="1"/>
                                    <field name="stage_cost_performance" force_save="1"/>
                                    <field name="cost_perf_analysis" force_save="1"/>
                                    <field name="summary_cv" force_save="1"/>
                                </group>
                                <group>
                                    <field name="stage_advance_var" force_save="1"/>
                                    <field name="advance_var_analysis" force_save="1"/>
                                    <field name="stage_advance_performance" force_save="1"/>
                                    <field name="advance_perf_analysis" force_save="1"/>
                                    <field name="summary_sv" force_save="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Projections">
                            <group>
                                <group>
                                    <field name="projection_type"/>
                                </group>
                                <group>
                                    <field name="projection_conclusion" force_save="1" decoration-danger="projection_decoration &lt; 0"/>
                                    <field name="projection_decoration" invisible="1" force_save="1"/>
                                </group>
                            </group>
                            <field name="projection_ids">
                                <tree editable="bottom" excel_export="1" create="false" delete="false" decoration-success="stage_state =='process'" decoration-bf="stage_state =='approved'" decoration-danger="stage_state =='cancel'" decoration-muted="stage_state =='draft'">
                                    <field name="stage_id"/>
                                    <field name="stage_start_date" invisible="1"/>
                                    <field name="stage_state" invisible="1"/>
                                    <field name="budget_at_end" widget="monetary" force_save="1"/>
                                    <field name="estimate_at_end" widget="monetary" force_save="1"/>
                                    <field name="estimate_up_to_end" widget="monetary" force_save="1"/>
                                    <field name="variation_at_end" widget="monetary" force_save="1"/>
                                    <field name="work_to_be_done" force_save="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                            <group>
                                <div class="row">
                                    <div class="col-3"><span><strong>BAC</strong> Budget at End</span><span><br/><strong>TCPI</strong> Work to be Done</span></div>
                                    <div class="col-3"><span><strong>EAC</strong> Estimate at End</span></div>
                                    <div class="col-3"><span><strong>ETC</strong> Estimate up to End</span></div>
                                    <div class="col-3"><span><strong>VAC</strong> Variation at End</span></div>
                                </div>
                            </group>
                        </page>
                        <page string="Notes">
                            <h5>Header Notes</h5>
                            <field name="header_notes" widget="html"/>
                            <h5>Budget Notes</h5>
                            <field name="obs" widget="html"/>
                        </page>
                        <page string="Incidences">
                            <button name="incident_review" string="Search Incidences" class="oe_highlight" type="object"/>
                            <group>
                                <field name="incidents"/>
                            </group>
                        </page>
                        <page name="rectify_detailed" string="Products Rectific"><!--groups="base_bim_2.group_rectify_products"-->
                            <div class="row">
                                <div class="col-3">
                                    <button name="load_product_budget_details" type="object" string="Load Products" class="btn-primary mt-2"/>
                                </div>
                                <div class="col-3" attr="{'invisible': [('detailed_retification_ids','=',[])]}">
                                    <button name="rectify_products_from_details" type="object" string="Rectify Product" class="btn-primary mt-2"/>
                                </div>
                            </div>

                            <field name="detailed_retification_ids">
                                <tree editable="bottom" create="0" excel_export="1" decoration-danger="bim_product_code!=odoo_product_code"><!---->
                                    <field name="budget_id" invisible="1"/>
                                    <field name="type"/>
                                    <field name="odoo_product_code" invisible="1"/>
                                    <field name="bim_product_code"/>
                                    <field name="bim_product_name"/>
                                    <field name="odoo_product_id" options="{'no_create': True}"/>
                                </tree>
                            </field>
                        </page>
                        <page name="bim_budget_tools" string="Tools" >
                            <group>
                                <group name="concept_quantiy2cero">
                                        <button name="concept_quantiy_to_cero" type="object" string="Budget Items Quantity to Zero" class="btn-primary mt-2"
                                        confirm="Are you sure you want to convert to zero the amounts in the Budget Items? Associated Measurements will be removed."/>
                                </group>
                            </group>
                        </page>
                        <page name="bim_budget_setting" string="Settings" groups="base_bim_2.group_manager_bim">
                            <group name="bim_budget_setting">
                                <group name="limit_certification">
                                    <field name="limit_certification"/>
                                    <field name="limit_certification_percent" attrs="{'invisible': [('limit_certification','=',False)],'required': [('limit_certification','=',True)]}" style="width: 20%;"/>
                                </group>
                           </group>
                        </page>
                    </notebook>

                    <!-- Totals -->
                    <group class="oe_right">
                        <group class="oe_subtotal_footer">
                            <field name="amount_total_labor"/>
                            <field name="amount_total_equip"/>
                            <field name="amount_total_material"/>
                            <field name="amount_total_other"/>

                            <field name="amount_certified_labor" invisible="1"/>
                            <field name="amount_certified_equip" invisible="1"/>
                            <field name="amount_certified_material" invisible="1"/>
                            <field name="amount_certified_other" invisible="1"/>

                            <field name="amount_executed_equip" invisible="1"/>
                            <field name="amount_executed_labor" invisible="1"/>
                            <field name="amount_executed_material" invisible="1"/>
                            <field name="amount_executed_other" invisible="1"/>

                            <field name="certified" class="oe_subtotal_footer_separator"/>
                            <field name="balance" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>

                    <field name="note" placeholder="Notes and observations..."></field>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div> -->
            </form>

        </field>
    </record>

    <record id="view_tree_bim_budget" model="ir.ui.view">
         <field name="name">view.tree.bim.budget</field>
         <field name="model">bim.budget</field>
         <field name="arch" type="xml">
            <tree decoration-danger="balance ==0">
                <field name="code"/>
                <button name="action_view_concepts" string="Tree" type="object" icon="fa-sitemap text-primary"/>
                <field name="name"/>
                <field name="type"/>
                <field name="currency_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="project_id"/>
                <field name="surface" sum="Total"/>
                <field name="balance" sum="Total"/>
                <field name="total_main_asset" sum="Total" widget="monetary"/>
                <field name="state_id"/>
            </tree>
        </field>
    </record>

    <record id="view_bim_budget_search" model="ir.ui.view">
        <field name="name">view.bim.budget.search</field>
        <field name="model">bim.budget</field>
        <field name="arch" type="xml">
            <search string="Search Budget">
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_bim_budget" model="ir.actions.act_window">
            <field name="name">Budgets</field>
            <field name="res_model">bim.budget</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_bim_budget_search"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Crete a new Budget!
              </p>
           </field>
    </record>

    <menuitem id="menu_bim_budget"
        name="Budgets"
        parent="base_bim_2.menu_bim"
        action="action_bim_budget"
        sequence="1" />

<!--
    ETAPAS
-->

    <record id="view_form_bim_budget_stage" model="ir.ui.view">
        <field name="name">view.form.bim.budget.stage</field>
        <field name="model">bim.budget.stage</field>
        <field name="arch" type="xml">
            <form string="Stages">
                <header>
                    <button name="action_start" type="object" string="Start" states="draft"/>
                    <button name="action_approve" type="object" string="Approve" states="process"/>
                    <button name="action_cancel" type="object" string="Cancel" states="approved,process"/>
                    <button name="action_draft" type="object" string="Pending" states="approved,cancel"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="budget_id" invisible="1"/>
                            <field name="date_start" invisible="1"/>
                            <field name="date_stop" string="Fecha"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_bim_budget_stage" model="ir.ui.view">
        <field name="name">view.tree.bim.budget.stage</field>
        <field name="model">bim.budget.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="budget_id"/>
                <field name="date_start"/>
                <field name="date_stop" string="Date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_bim_budget_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">bim.budget.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a new stage!
            </p>
        </field>
    </record>

    <menuitem id="menu_bim_budget_stage"
        name="Stages"
        parent="base_bim_2.menu_bim"
        action="action_bim_budget_stage"
        sequence="10" />

<!--
    ESPACIOS
-->

    <record id="view_form_bim_budget_space" model="ir.ui.view">
        <field name="name">view.form.bim.budget.space</field>
        <field name="model">bim.budget.space</field>
        <field name="arch" type="xml">
            <form string="Space">
                <header>
                    <button name="%(base_bim_2.act_space_requisition_wizard)d"
                            string="Create Material Request" type="action" class="oe_highlight" /><!--groups="base_bim_2.group_user_bim"-->

                    <!-- attrs="{'invisible': [('concept_ids','=',[])]}" -->
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_purchase_requisition" type="object" class="oe_stat_button" icon="fa-check">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value"><field name="purchase_req_count" widget="statinfo" nolabel="1"/></span>
                                <span class="o_stat_text">Material Requests</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="project_id" invisible="1"/>
                            <field name="budget_id" options="{'no_create': True}"  required="1"/>
                            <field name="object_id" options="{'no_create': True}" domain="[('project_id', '=',project_id)]"/>
                        </group>
                    </group>
                <field name="note" placeholder="Notes and observations..."></field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_bim_budget_group" model="ir.ui.view">
        <field name="name">view.tree.bim.budget.space</field>
        <field name="model">bim.budget.space</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="budget_id"/>
                <field name="object_id"/>
                <field name="project_id"/>
            </tree>
