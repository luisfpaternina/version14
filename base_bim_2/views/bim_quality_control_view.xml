<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--CONTROL PLAN-->
        <record id="view_form_bim_quality_control" model="ir.ui.view">
            <field name="name">view.form.bim.quality.control</field>
            <field name="model">bim.quality.control.plan</field>
            <field name="arch" type="xml">
                <form string="Report" delete="0" >
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_control_lines" type="object" class="oe_stat_button" icon="fa-bars" groups="base_bim_2.group_user_bim">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_text">Quality Plan</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                           <h1>
                               <field name="name" readonly="1"/>
                           </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id" options="{'no_create': True}"/>
                                <field name="code"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="description"/>
                                <field name="date"/>
                                <field name="user_id" options="{'no_create': True}"/>
                            </group>
                        </group>
                     </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_bim_quality_control" model="ir.ui.view">
            <field name="name">view.tree.bim.quality.control</field>
            <field name="model">bim.quality.control.plan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="code"/>
                    <field name="date"/>
                    <field name="project_id"/>
                    <field name="user_id"/>
                     <field name="company_id" ref="base.main_company" />
                </tree>
            </field>
        </record>

        <record id="action_bim_quality_control" model="ir.actions.act_window">
            <field name="name">Quality Control Plan</field>
            <field name="res_model">bim.quality.control.plan</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new Control Plan!
                </p>
            </field>
        </record>

        <!--CONTROL PLAN LINES-->
        <record id="view_tree_bim_quality_control_line" model="ir.ui.view">
            <field name="name">view.tree.bim.quality.control.line</field>
            <field name="model">bim.quality.control.plan.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="plan_id" readonly="1" optional="hide"/>
                    <field name="code" readonly="1" force_save="1"/>
                    <field name="activity"/>
                    <field name="inspection_type_id"/>
                    <field name="user_id"/>
                    <field name="characteristic"/>
                    <field name="frequency"/>
                    <field name="criterion"/>
                    <field name="doc_ids" widget="many2many_tags"/>
                    <field name="checklist_ids" widget="many2many_tags"/>
                    <field name="register_type_id"/>
                    <field name="register_related"/>
                    <field name="inspection_ime"/>
                </tree>
            </field>
        </record>

        <record id="action_bim_quality_control_line" model="ir.actions.act_window">
            <field name="name">Control Plan</field>
            <field name="res_model">bim.quality.control.plan.line</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="submenu_bim_quality_control"
            name="Quality Control Plan"
            parent="base_bim_2.menu_bim"
            action="action_bim_quality_control"
            sequence="57" />
    </data>

</odoo>
