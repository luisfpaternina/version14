<?xml version="1.0" encoding="UTF-8"?>
 <odoo>

    <record model="ir.ui.view" id="base_bim_2_quant_tree">
        <field name="name">ipiola.base.quant.tree</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="resource_type" invisible="1"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="base_bim_view_picking_form">
        <field name="name">base.bim.view.picking-form</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='other_infos']" position="after">
                <group name="bim_stock" string="BIM Information">
                    <field name="bim_requisition_id"/>
                    <field name="bim_project_id"/>
                    <field name="bim_budget_id" options='{"no_create": 1, "no_open": 1}' groups="base_bim_2.group_budget_concept_documents"/>
                    <field name="bim_concept_id" options='{"no_create": 1, "no_open": 1}' groups="base_bim_2.group_budget_concept_documents"/>
                    <field name="bim_space_id"/>
                    <field name="bim_object_id"/>
                    <field name="include_for_bim"/>
                </group>
            </xpath>
            <field name="origin" position="after">
                <field name="invoice_guide_number" attrs="{'invisible': [('picking_type_code', '=', 'outgoing')]}"/>
            </field>
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                    <field name="supplier_id" options='{"no_create": 1, "no_open": 1}' optional="hide"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="base_bim_view_picking_tree">
        <field name="name">base.bim.view.picking.tree</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="bim_project_id"/>
                    <field name="bim_budget_id" options='{"no_create": 1, "no_open": 1}' groups="base_bim_2.group_budget_concept_documents"/>
                    <field name="bim_concept_id" options='{"no_create": 1, "no_open": 1}' groups="base_bim_2.group_budget_concept_documents"/>
            </xpath>

        </field>
    </record>


</odoo>
