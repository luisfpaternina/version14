<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
    <data>
        <record id="view_form_bim_paidstate" model="ir.ui.view">
            <field name="name">view.form.bim.paidstate</field>
            <field name="model">bim.paidstate</field>
            <field name="arch" type="xml">
                <form string="Payment Status">
                    <header>
                        <button name="action_validate" string="Validate" type="object" states="draft" class="btn-primary"/>
                        <button name="%(base_bim_2.bim_paidstate_wizard_action)d" type="action" string="Load Amount" attrs="{'invisible':['|',('state','!=','draft'),('type','=','manual')]}"/>
                        <button name="action_invoice" states="validated" string="Generate Invoice" class="btn-primary o_sale_confirm" type="object" groups="account.group_account_invoice"/>
                        <button name="action_paid_state_cancel" confirm="Are you sure to cancel this payment state" type="object" string="Cancelar" attrs="{'invisible':[('state','=','cancel')]}"/>
                        <!--<button name="action_back_to_draft" string="Back to Draft" type="object" states="draft" class="btn-primary"/> -->
                        <field name="state" widget="statusbar" statusbar_visible="draft,validated,invoiced"/>
                    </header>
                    <sheet>
<!--                        <div class="oe_button_box" name="button_box">-->
<!--                            <button name="action_view_invoice" type="object" class="oe_stat_button" icon="fa-archive" groups="base_bim_2.group_user_bim">&lt;!&ndash;groups="base_bim_2.group_user_bim"&ndash;&gt;-->
<!--                                <div class="o_form_field o_stat_info">-->
<!--                                    <span class="o_stat_value"><field name="invoice_count" widget="statinfo" nolabel="1"/></span>-->
<!--                                    <span class="o_stat_text">Invoice</span>-->
<!--                                </div>-->
<!--                            </button>-->
<!--                        </div>-->
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                       <group>
                            <group>
                                <field name="project_id" options='{"no_open": True, "no_create": True, "no_create_edit": True, "no_quick_create": True}'/>
                                <field name="type" attrs="{'readonly': [('state','!=','draft')]}" widget="radio"/>
                                <field name="date"/>
                                <field name="invoice_id" attrs="{'invisible': [('state','!=','invoiced')]}" groups="account.group_account_invoice"/>
                                <field name="maintenance_id" attrs="{'invisible': [('maintenance_id', '=', False)]}"/>
                                <field name="apply_retention"/>
                            </group>
                            <group>
                                <field name="paidstate_company_retention" attrs="{'invisible': [('apply_retention', '=', False)]}"/>
                                <field name="paidstate_retention" attrs="{'invisible': [('apply_retention', '=', False)]}"/>
                                <field name="progress"/>
                                <field name="currency_id" attrs="{'invisible': [('maintenance_id', '=', False)]}" options='{"no_open": True, "no_create": True, "no_create_edit": True, "no_quick_create": True}'/>
                                <field name="invoice_debit_credit" groups="account.group_account_invoice"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                       </group>
                       <notebook>
                            <page string="Lines" attrs="{'invisible': [('type','=','manual')]}">
                                <field name="lines_ids" attrs="{'readonly': [('state','!=','draft')]}">
                                    <tree editable="bottom" excel_export="1">
                                        <field name="budget_id" options='{"no_open": True, "no_create": True}'/>
                                        <field name="name"/>
                                        <field name="quantity"/>
                                        <field name="price_unit" />
                                        <field name="certification_factor" string="Factor"/>
                                        <field name="amount" sum="Sum" string="Amount Net"/>
                                        <field name="amount_total" sum="Sum" string="Total Amount"/>
                                        <field name="project_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Object Lines" attrs="{'invisible': [('type','=','certification')]}">
                                <field name="object_lines_ids" attrs="{'readonly': [('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="object_id" options='{"no_open": True, "no_create": True}'/>
                                        <field name="amount" sum="Sum"/>
                                        <field name="percent" />
                                        <field name="project_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                       </notebook>
                       <field name="paidstate_notes" nolabel="1" placeholder="Add invoice notes..."/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_tree_bim_paidstate" model="ir.ui.view">
            <field name="name">view.tree.bim.paidstate</field>
            <field name="model">bim.paidstate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="type"/>
                    <field name="date"/>
                    <field name="progress"/>
                    <field name="amount" sum="Total" string="Amount Net"/>
                    <field name="amount_total" sum="Total" string="Total Amount"/>
                    <field name="state"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="action_bim_paidstate" model="ir.actions.act_window">
            <field name="name">Payment Status</field>
            <field name="res_model">bim.paidstate</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create new Payment Status!
                </p>
            </field>
        </record>

        <menuitem id="menu_bim_paidstate"
            name="Payment Status"
            parent="base_bim_2.menu_bim"
            action="action_bim_paidstate"
            sequence="3" />

        <!-- CONTABILIDAD -->
        <menuitem id="menu_bim_account_cat"
            name="BIM"
            parent="account.menu_finance_receivables"
            sequence="-1" />

        <menuitem id="menu_bim_paidstate_account"
            name="Payment Status"
            parent="base_bim_2.menu_bim_account_cat"
            action="action_bim_paidstate"
            sequence="1" />

     </data>
</odoo>
