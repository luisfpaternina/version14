<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="email_template_maintenance" model="mail.template">
            <field name="name">Maintenance: Maintenance Reminder</field>
            <field name="model_id" ref="base_bim_2.model_bim_maintenance"/>
            <field name="subject">Maintenance (Ref ${object.name or 'n/a' })</field>
            <field name="email_from">${(object.user_id.email)}</field>
            <field name="email_to">${(object.project_id.customer_id.email)}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello ${object.project_id.customer_id.name}
                        <br/><br/>
                        We remind you that on <strong>${(object.date_planned)}</strong> we will visit your project: <strong>${object.project_id.nombre}</strong>
                        <br/><br/>
                        Regards,
                    </p>
                </div>
            </field>
            <field name="report_name">MANT_${(object.name or '')}</field>
            <field name="lang">${object.project_id.customer_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>