<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="email_template_checklist" model="mail.template">
            <field name="name">Checklist: Send Checklist</field>
            <field name="model_id" ref="base_bim_2.model_bim_checklist"/>
            <field name="subject">Checklist (Ref ${object.code or 'n/a' })</field>
            <field name="partner_to">${object.project_id.customer_id.id}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello ${object.project_id.customer_id.name}
                        <br/><br/>
                        We attach the checklist of project <strong>${object.project_id.nombre}</strong>
                        <br/><br/>
                        Regards,
                    </p>
                </div>
            </field>

            <field name="report_template" ref="base_bim_2.bim_checklist_act"/>
            <field name="report_name">CHKLST_${(object.code or '')}</field>
            <field name="lang">${object.project_id.customer_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="email_template_checklist_notification" model="mail.template">
            <field name="name">Checklist: Notification</field>
            <field name="model_id" ref="base_bim_2.model_bim_checklist"/>
            <field name="subject">Checklist (Ref ${object.code or 'n/a' })</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello dear Checklist State users,
                        <br/><br/>
                        We would like to notify you that Checklist <strong>${object.code}</strong> has entered in one state assigned to you.
                        <br/><br/>
                        Regards,
                    </p>
                </div>
            </field>
            <field name="lang">${object.user_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="email_template_budget" model="mail.template">
            <field name="name">Budget: Send budget</field>
            <field name="model_id" ref="base_bim_2.model_bim_budget"/>
            <field name="subject">${object.company_id.name} (Budget: ${object.name or 'n/a' })</field>
            <field name="email_from">${(object.user_id.email_formatted or user.email_formatted) | safe}</field>
            <field name="partner_to">${object.project_id.customer_id.id}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello ${object.project_id.customer_id.name}
                        <br/><br/>
                        Full Budget Report is attached <strong>${object.name}</strong>
                        <br/><br/>
                        Regards,
                    </p>
                </div>
            </field>
            <field name="report_name">${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.project_id.customer_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
