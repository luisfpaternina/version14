<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="bim_export_wizard_view_form" model="ir.ui.view">
        <field name="name">bim.export.wizard.view.form</field>
        <field name="model">bim.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export budget">
                 <group name="main">
                    <group name="left">
                        <field name="version"/>
                        <field name="budget_id" options="{'no_create': 1, 'no_open': 1}"/>
                    </group>
                </group>
                <footer>
                    <button name="cancel" string="Cancel" special="cancel" class="btn-secondary"/>
                    <button name="export_file" type="object" string="Export" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="bim_export_wizard_action" model="ir.actions.act_window">
        <field name="name">Export budget</field>
        <field name="res_model">bim.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="bim_export_wizard_menu"
        name="Export"
        parent="menu_bim_imports"
        action="bim_export_wizard_action"
        sequence="30"/>
</odoo>
