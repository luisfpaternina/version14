<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- bim.file.import form view -->
    <record id="bim_file_import_view_form" model="ir.ui.view">
        <field name="name">bim.file.import.view.form</field>
        <field name="model">bim.file.import</field>
        <field name="arch" type="xml">
            <form string="Import BIM File">
                <group>
                    <group>
                        <field name="budget_id" invisible="1"/>
                        <field name="filename" invisible="1"/>
                        <field name="bim_file" filename="filename"/>
                        <field name="bim_type" widget="radio"/>
                    </group>
                </group>
                <footer>
                    <button name="cancel" string="Cancel" special="cancel" class="btn-secondary"/>
                    <button name="import_bim_file" string="Import" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
