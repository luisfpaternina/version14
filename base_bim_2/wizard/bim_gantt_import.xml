<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- bim.gantt.import form view -->
    <record id="bim_gantt_import_view_form" model="ir.ui.view">
        <field name="name">bim.gantt.import.view.form</field>
        <field name="model">bim.gantt.import</field>
        <field name="arch" type="xml">
            <form string="Import Gantt">
                <group>
                    <group>
                        <field name="budget_id" invisible="1"/>
                        <field name="filename" invisible="1"/>
                        <field name="xml_file" filename="filename"/>
                        <field name="gantt_type" widget="radio"/>
                    </group>
                    <group>
                        <field name="create_missing"/>
                        <field name="import_stages"/>
                        <field name="stage_id" widget="selection" attrs="{'invisible': [('import_stages', '=', False)], 'required': [('import_stages', '=', True)]}"/>
                    </group>
                </group>
                <footer>
                    <button name="cancel" string="Cancel" special="cancel" class="btn-secondary"/>
                    <button name="print_xml" type="object" string="Import" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
