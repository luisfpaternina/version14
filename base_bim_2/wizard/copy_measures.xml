<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="copy_measures_wizard_view_form" model="ir.ui.view">
        <field name="name">copy.measures.wizard.view.form</field>
        <field name="model">copy.measures.wizard</field>
        <field name="arch" type="xml">
            <form string="Copy measurements">
                 <group name="main">
                    <group name="left">
                        <field name="concept_id" invisible="1"/>
                        <field name="budget_id" options="{'no_create': 1, 'no_open': 1}"/>
                        <field name="dest_concept_id" options="{'no_create': 1, 'no_open': 1}"/>
                    </group>
                </group>
                <footer>
                    <button name="cancel" string="Cancel" special="cancel" class="btn-secondary"/>
                    <button name="action_copy" type="object" string="Copy" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="copy_measures_wizard_action" model="ir.actions.act_window">
        <field name="name">Copy measurements</field>
        <field name="res_model">copy.measures.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
