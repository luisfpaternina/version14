<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="bim_import_wizard_view_form" model="ir.ui.view">
        <field name="name">bim.import.wizard.view.form</field>
        <field name="model">bim.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Budget">
                <group name="main">
                    <group name="left">
                        <field name="filename" invisible="1"/>
                        <field name="version"/>
                        <field name="excel_file" string="Excel File" filename="filename" attrs="{'invisible': [('version', '!=', '8.8')]}"/>
                        <field name="excel_file" string="BC3 File" filename="filename" attrs="{'invisible': [('version', '!=', 'bc3')]}"/>
                        <field name="excel_file" string="Project File" filename="filename" attrs="{'invisible': [('version', '!=', 'ms_xml')]}"/>
                    </group>
                    <group name="right">
                        <field name="project_id" options="{'no_create': 1, 'no_open': 1}"/>
                            <field name="create_all_products" attrs="{'invisible': [('version', 'not in', ['bc3', '8.8'])]}"/>
                            <field name="product_cost_or_price"  attrs="{'invisible': ['|', ('version', 'not in', ['bc3', '8.8']), ('create_all_products', '=', False)], 'required': [('version', 'not in', ['bc3', '8.8']), ('create_all_products', '=', True)]}"/>
                            <field name="product_id" options="{'no_create': 1, 'no_open': 1}"
                                   attrs="{'invisible': ['|', ('version', 'not in', ['bc3', '8.8']), ('create_all_products', '=', True)], 'required': [('version', 'not in', ['bc3', '8.8']), ('create_all_products', '=', False)]}"/>
                            <field name="import_stages" attrs="{'invisible': [('version', '!=', 'ms_xml')]}"/>
                    </group>
                </group>
                <footer>
                    <button name="cancel" string="Cancel" special="cancel" class="btn-secondary"/>
                    <button name="import_data" type="object" string="Import" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="bim_import_wizard_action" model="ir.actions.act_window">
        <field name="name">Import Budget</field>
        <field name="res_model">bim.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="bim_import_wizard_menu"
              name="Import"
              parent="menu_bim_imports"
              action="bim_import_wizard_action"
              sequence="20"/>

    <record id="bim_import_temp_view_form" model="ir.ui.view">
        <field name="name">bim.import.temp.view.form</field>
        <field name="model">bim.import.temp</field>
        <field name="arch" type="xml">
            <form string="Import budget">

                <field name="state" invisible="1"/>
                <header>
                    <button name="back_draft" type="object" string="Try again" states="error"/>
                    <button name="action_import" type="object" string="Import" class="btn-secondary"
                            states="to_execute,ongoing"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" text="Error" attrs="{'invisible': [('state', '!=', 'error')]}"
                            bg_color="bg-danger"/>
                    <widget name="web_ribbon" text="Procesando" attrs="{'invisible': [('state', '!=', 'ongoing')]}"
                            bg_color="bg-warning"/>
                    <widget name="web_ribbon" text="Hecho" attrs="{'invisible': [('state', '!=', 'done')]}"
                            bg_color="bg-success"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group name="main" attrs="{'readonly': [('state', '=', 'done')]}">
                        <group name="left">
                            <field name="filename" invisible="1"/>
                            <field name="version"/>
                            <field name="excel_file" filename="filename"/>
                        </group>
                        <group name="right">
                            <field name="project_id" options="{'no_create': 1, 'no_open': 1}"/>
                            <field name="create_all_products" attrs="{'invisible': [('version', 'not in', ['bc3', '8.8'])]}"/>
                            <field name="product_cost_or_price"  attrs="{'invisible': ['|', ('version', 'not in', ['bc3', '8.8']), ('create_all_products', '=', False)], 'required': [('version', 'not in', ['bc3', '8.8']), ('create_all_products', '=', True)]}"/>
                            <field name="product_id" options="{'no_create': 1, 'no_open': 1}"
                                   attrs="{'invisible': ['|', ('version', 'not in', ['bc3', '8.8']), ('create_all_products', '=', True)], 'required': [('version', 'not in', ['bc3', '8.8']), ('create_all_products', '=', False)]}"/>
                            <field name="import_stages" attrs="{'invisible': [('version', '!=', 'ms_xml')]}"/>
                            <field name="user_id" options="{'no_open': True}" force_save="1"/>
                            <field name="budget_id" states="done"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="error" string="Error" states="error">
                            <field name="error"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="bim_import_temp_view_tree" model="ir.ui.view">
        <field name="name">bim.import.temp.view.tree</field>
        <field name="model">bim.import.temp</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state=='error'" decoration-success="state=='done'">
                <field name="name"/>
                <field name="filename"/>
                <field name="project_id" optional="show"/>
                <field name="version" optional="hide"/>
                <field name="create_all_products" optional="hide"/>
                <field name="product_id" optional="hide"/>
                <field name="user_id" optional="show"/>
                <field name="budget_id" optional="show"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="bim_import_temp_view_search" model="ir.ui.view">
        <field name="name">bim.import.temp.view.search</field>
        <field name="model">bim.import.temp</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="filename" string="File"/>
                <field name="project_id"/>
                <field name="version"/>
                <field name="user_id"/>
                <field name="budget_id"/>
                <field name="state"/>
                <filter name="state_to_execute" string="To execute" domain="[('state', '=', 'to_execute')]"/>
                <filter name="state_ongoing" string="In process" domain="[('state', '=', 'ongoing')]"/>
                <filter name="state_done" string="Done" domain="[('state', '=', 'done')]"/>
                <filter name="state_error" string="Error" domain="[('state', '=', 'error')]"/>
                <filter name="groupby_state" string="Status" context="{'group_by': 'state'}"/>
                <filter name="groupby_user" string="Responsable" context="{'group_by': 'user_id'}"/>
                <filter name="groupby_project" string="Project" context="{'group_by': 'project_id'}"/>
            </search>
        </field>
    </record>

    <record id="bim_import_temp_action" model="ir.actions.act_window">
        <field name="name">Importation job</field>
        <field name="res_model">bim.import.temp</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_state_to_execute': 1, 'search_default_state_ongoing': 1, 'search_default_state_error': 1}</field>
    </record>

    <menuitem id="bim_import_temp_menu"
              name="Importation job"
              parent="menu_bim_imports"
              action="bim_import_temp_action"
              sequence="10"/>
</odoo>
